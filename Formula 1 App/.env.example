# ApexGrid AI - Formula 1 League Management Platform

# ===========================================
# SUPABASE CONFIGURATION
# ===========================================

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (public, safe for client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (private, server-only)
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Direct Database Connection URL (for Prisma)
DATABASE_URL=postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres

# Supabase Storage Bucket for Images
SUPABASE_STORAGE_BUCKET=apexgrid-images

# ===========================================
# AUTHENTICATION
# ===========================================

# JWT Secret (used for custom claims if needed)
JWT_SECRET=your_jwt_secret_here

# ===========================================
# AI CONFIGURATION
# ===========================================

# AI Provider: "openai" or "azure"
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Azure OpenAI Configuration (if using Azure)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01

# ===========================================
# DISCORD INTEGRATION
# ===========================================

# Discord Webhook URL (optional, can be set per-league)
DISCORD_WEBHOOK_URL=

# ===========================================
# STRIPE (FUTURE MONETIZATION)
# ===========================================

# Stripe API Keys (not active yet)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================

# Application URL (for email links, webhooks, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE=en

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# Enable debug mode
DEBUG=false
